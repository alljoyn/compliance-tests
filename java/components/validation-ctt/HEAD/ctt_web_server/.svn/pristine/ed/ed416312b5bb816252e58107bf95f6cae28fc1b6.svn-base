@CHARSET "UTF-8";

/********************************************
Full height with footer always at bottom
*********************************************/
html,
body{
	height: 100%;
}

#wrap {
  min-height: 100%;
}

#main {
  /*overflow:auto;*/
  padding-bottom:70px; /* this needs to be bigger than footer height*/
}

.footer {
  position: relative;
  margin-top: -70px; /* negative value of footer height */
  height: 70px;
  clear:both;
  padding-top:20px;
}

/********************************************
Full height with footer always at bottom
*********************************************/
