/*******************************************
Header
********************************************/
.asa-header {
	border-bottom-style: solid; 
	border-bottom-color: #000000; 
	border-bottom-width:2px;
}

.asa-header-logo {
    height: 35px;
    margin-right: 10px;
    margin-top: 14px;
}

.asa-header-title {
	margin-top: 15px;
	margin-bottom: 15px;
}

.asa-header-logout {
	margin-top: 15px;
	margin-bottom: 13px; /* Due to margin-bottom: 2px of .btn */
}

.error {
	color: #D43D1A;
}

/*******************************************
Left side column
********************************************/
.asa-left-column {
	border-right-style: solid;
	border-right-color: #000000;
	border-right-width: 1px;
}

.asa-left-row {
	border-bottom-style: solid;
	border-bottom-color: #000000;
	border-bottom-width: 1px;
}

.asa-left-button {
	margin-top: 2px;
}

.asa-left-nav {
	margin-left: 15px;
	/*margin-right: 20px;*/
	margin-top: 10px;
}

.asa-left-nav li a {
    padding: 7px 10px;
    margin: -3px 0px;
    color: #008888;
    font-weight: bold;
}

.asa-left-nav li.disabled a {
	font-weight:normal;
}

.asa-left-nav li a:hover,
.asa-left-nav li a:focus
{
	position: relative;
	background-color: #555555;
	color: #FFFFFF;
	/*border: 4px solid #c2e1f5;*/
}

.asa-left-nav li a:hover:after,
.asa-left-nav li a:hover:before
.asa-left-nav li a:focus:after,
.asa-left-nav li a:focus:before {
	left: 100%;
	top: 50%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.asa-left-nav li a:hover:after,
.asa-left-nav li a:focus:after {
	border-color: rgba(136, 183, 213, 0);
	border-left-color: #555555;
	border-width: 17px;
	margin-top: -17px;
}
.asa-left-nav li a:hover:before,
.asa-left-nav li a:focus:before {
	border-color: rgba(136, 183, 213, 0);
	border-left-color: #555555;
	border-width: 17px;
	margin-top: -17px;
}

/*******************************************
Right side column
********************************************/
